<odoo>
  <data>
    <record id="inherited_sale_view_form" model="ir.ui.view">
    <field name="name">inherited.sale.form.inherit.test</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
          <field name="qty"/>
          <field name="anch"/>
          <field name="larg"/>
          <field name="alt"/>
        </xpath>
    </field>
   </record>
   <record id="inherited_mrp_view_form" model="ir.ui.view">
    <field name="name">inherited.mrp.form.inherit.test</field>
    <field name="model">mrp.production</field>
    <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='bom_id']" position="after">
          <field name="qty"/>
          <field name="anch"/>
          
        </xpath>
        <xpath expr="//field[@name='user_id']" position="after">
          <field name="larg"/>
          <field name="alt"/>
        </xpath>
        
    </field>
   </record>
  </data>
</odoo>